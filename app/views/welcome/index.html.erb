<section id="header-bg">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        
        <% if current_user %>
          <br/><br/>
          <%= image_tag current_user.image_url, class: 'img-circle img-thumbnail home-image' %>
          <h1>Hello, <%= current_user.screen_name %></h1>
          <table class="user-stats">
            <tr>
            <td>followers</td>
            <td>following</td>
            <td>starred</td>
            </tr>
            <th><%= current_user.total_followers %></th>
            <th><%= current_user.total_following %></th>
            <th><%= current_user.total_starred %></th>
          </table>
          
        <% else %>
          <%= image_tag 'github-icon.png', class: 'img-circle git-icon' %>
          <%= button_to "Sign in with Github", login_path, class: 'btn btn-social btn-github' %>
        <% end %>
        <br><br>
      </div>
    </div>
  </div>
</section>
<% if current_user %>
  
<section id="user-feed">
  <div class="container, bottom7">
    <div class="row">
      <div class="col-md-4 text-center">
        <h1>Activity Panel</h1>
        <h3>Commits:</h3> 560
        <h3>Pull Requests:</h3> 100 
        <h3>Issues:</h3> 100
      </div>
  
      <div class="col-md-4 text-center">
        <%= render '/user_feed' %>
        <br><br>
      </div>
  
      <div class="col-md-4 text-center">
        <h1>My Organizations</h1>
        
        <%# current_user.organizations.each do |org| %>
          <%#=  %>
      </div>
    </div>
  </div>
</section>

  
<section id="contributions">
  <div class="container, bottom7">
    <div class="row">
      <div class="col-lg-12 text-center">
        <%= current_user.chart.html_safe %>
        <br>
        <%= current_user.stats %>
      </div>
    </div>
  </div>
</section>

<section id="public-feed">
  <div class="container, bottom7">
    <div class="row">
      <div class="col-md-8 text-center">

      </div>
      
      <div class="col-md-4 text-center">
        
      </div>
    </div>
  </div>
</section>

<% end %>

